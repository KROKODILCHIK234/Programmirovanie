#include <iostream>
#include <iomanip>
#include <string>

class Date {
private:
    int day;
    int month1;
    const std::string month2[12] = {"Январь", "Февраль", "Март", "Апрель", "Май", "Июнь",
                                    "Июль", "Август", "Сентябрь", "Октябрь", "Ноябрь", "Декабрь"};
    int year;

public:
    Date(int d = 1, int m = 1, int y = 2000) : day(d), month1(m), year(y) {}

    // Метод для ввода даты
    void inputDate() {
        std::cout << "Введите дату (дд/мм/гггг):";
        char dot;
        std::cin >> day >> dot >> month1 >> dot >> year;
    }

    // Метод для вывода даты в полном формате
    void printFullDate() const {
        std::cout << day << " " << month2[month1 - 1] << " " << year << std::endl;
    }

    // Перегрузка оператора << для форматированного вывода
    friend std::ostream& operator<<(std::ostream& os, const Date& date) {
        os << std::setw(2) << std::setfill('0') << date.day << "."
           << std::setw(2) << std::setfill('0') << date.month1 << "."
           << std::setw(2) << std::setfill('0') << (date.year % 100);
        return os;
    }

    // Метод для вычисления разницы между двумя датами в днях
    int daysDifference(const Date& other) const {
        int julian1 = getJulianDay();
        int julian2 = other.getJulianDay();
        return abs(julian2 - julian1);
    }

private:
    // Метод для расчета юлианской даты
    int getJulianDay() const {
        int a = (14 - month1) / 12;
        int y = year + 4800 - a;
        int m = month1 + 12 * a - 3;
        return day + (153 * m + 2) / 5 + 365 * y + y / 4 - y / 100 + y / 400 - 32045;
    }
};

int main() {
    Date date1, date2;

    // Ввод двух дат
    date1.inputDate();
    date2.inputDate();

    // Вывод дат в пользовательском формате
    std::cout << "1-я дата: " << date1 << std::endl;
    std::cout << "2-я дата: " << date2 << std::endl;

    // Вывод разницы между датами в днях
    std::cout << "Разница в днях: " << date1.daysDifference(date2) << std::endl;

    // Вывод полных дат
    date1.printFullDate();
    date2.printFullDate();

    return 0;
}
